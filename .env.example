ZHIPU_API_KEY=YOUR_ZHIPU_API_KEY
ZHIPU_CHAT_MODEL=glm-4.7

# If unset, the app will only return story text (no audio).
ZHIPU_TTS_MODEL=glm-tts
ZHIPU_TTS_ENDPOINT=https://open.bigmodel.cn/api/paas/v4/audio/speech
ZHIPU_TTS_VOICE=

# Voice chat (optional; for “海皮老师” multi-turn voice chat)
ZHIPU_VOICE_MODEL=glm-4-voice
ZHIPU_VOICE_ENDPOINT=https://open.bigmodel.cn/api/paas/v4/chat/completions

# Timeouts (ms). For Vercel Hobby (10s), consider setting 8000~9000 to avoid FUNCTION_INVOCATION_TIMEOUT.
ZHIPU_TIMEOUT_MS=30000
ZHIPU_CHAT_TIMEOUT_MS=
ZHIPU_TTS_TIMEOUT_MS=

# Admin / memories
STORY_ADMIN_TOKEN=CHANGE_ME_LONG_RANDOM

# Local file store (default: data/memories.jsonl)
STORY_LOG_PATH=

# Remote store (recommended for Vercel): e.g. https://mem.cciscc.cc/story-memories
STORY_REMOTE_LOG_URL=
STORY_REMOTE_LOG_TOKEN=
